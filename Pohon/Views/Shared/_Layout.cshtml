<!DOCTYPE html>

<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/water.css@2/out/water.css">
</head>
<body>
    <nav class="navbar">
        <h1>Pohon</h1>
        <p>A blatant linktree ripoff</p>
        @if (!User!.Identity!.IsAuthenticated)
        {
            <a href=@ViewData["Github.AuthorizeUri"] class="btn btn-primary" type="submit">Sign in with Github</a>
        }
        else
        {
            <p>You are logged in as <b>@User.Identity.Name</b> | <a href="/logout">Logout</a></p>
        }
        </nav>
    <div>
          @RenderBody()
    </div>
</body>
</html>
